  "ai_actions_allowed": [
    {"action_type": "summarize_client_narrative", "risk_level": "low", "requires_approval": false, "allowed_roles": ["paralegal", "attorney"]},
    {"action_type": "generate_discovery_checklist", "risk_level": "low", "requires_approval": false, "allowed_roles": ["paralegal"]},
    {"action_type": "draft_client_update_email", "risk_level": "medium", "requires_approval": true, "allowed_roles": ["paralegal", "attorney"]},
    {"action_type": "extract_deadlines_from_orders", "risk_level": "low", "requires_approval": false, "allowed_roles": ["paralegal"]}
