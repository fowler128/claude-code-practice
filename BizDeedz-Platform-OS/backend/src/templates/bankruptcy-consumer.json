    },
    {
      "lane_id": "document_collection",
      "name": "Document Collection",
      "order": 3,
      "roles": ["paralegal"]
    },
    {
      "lane_id": "drafting_prep",
      "name": "Drafting / Case Prep",
      "order": 4,
      "roles": ["paralegal"]
    },
    {
      "lane_id": "attorney_review",
      "name": "Attorney Review / Approval",
      "order": 5,
      "roles": ["attorney"]
