      "allowed_transitions": ["final_docs_prep"]
    },
    {
      "id": "final_docs_prep",
      "name": "Final Documents in Preparation",
      "lane": "finalization",
      "order": 18,
      "sla_hours": 72,
      "allowed_transitions": ["final_docs_complete"]
    },
    {
      "id": "final_docs_complete",
      "name": "Final Documents Complete",
      "lane": "finalization",
      "order": 19,
      "sla_hours": 24,
      "allowed_transitions": ["delivered_to_client"]
    },
    {
      "id": "returned_for_corrections",
      "name": "Returned for Corrections",
