      "allowed_transitions": ["signing_scheduled"]
    },
    {
      "id": "signing_scheduled",
      "name": "Signing Scheduled",
      "lane": "execution",
      "order": 16,
      "sla_hours": 240,
      "allowed_transitions": ["signing_complete"]
    },
    {
      "id": "signing_complete",
      "name": "Signing Complete",
      "lane": "finalization",
      "order": 17,
