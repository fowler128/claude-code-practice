{
  "template_id": "pe-estate-v1",
  "template_version": 1,
  "practice_area": "PE",
  "matter_type": "PE-ESTATE",
  "name": "Probate/Estate: Estate Planning Package",
  "description": "Estate planning workflow including wills, trusts, powers of attorney, and healthcare directives.",

  "lanes": [
    {
      "id": "intake",
      "name": "Intake",
      "order": 1,
      "roles": ["intake_specialist", "paralegal"],
      "description": "Initial consultation and information gathering"
    },
    {
      "id": "engagement",
      "name": "Engagement",
      "order": 2,
      "roles": ["paralegal", "estate_attorney"],
      "description": "Conflicts, engagement, and planning approach"
    },
    {
      "id": "planning",
      "name": "Planning",
      "order": 3,
      "roles": ["estate_attorney", "paralegal"],
      "description": "Develop estate plan and strategy"
    },
    {
      "id": "drafting",
      "name": "Drafting",
      "order": 4,
      "roles": ["paralegal", "estate_attorney"],
      "description": "Draft estate planning documents"
    },
    {
      "id": "review",
      "name": "Review",
      "order": 5,
      "roles": ["estate_attorney", "senior_paralegal"],
      "description": "Attorney review and client review"
    },
    {
      "id": "execution",
      "name": "Execution",
      "order": 6,
      "roles": ["paralegal", "notary"],
      "description": "Document signing and notarization"
    },
    {
      "id": "finalization",
      "name": "Finalization",
      "order": 7,
      "roles": ["paralegal"],
      "description": "Finalize and deliver documents"
    },
    {
      "id": "closed",
      "name": "Closed",
      "order": 8,
      "roles": ["admin"],
      "description": "Estate plan completed"
    }
  ],

  "statuses": [
    {
      "id": "new",
      "name": "New - Consultation Scheduled",
      "lane": "intake",
      "order": 1,
      "is_initial": true,
      "sla_hours": 48,
      "allowed_transitions": ["intake_complete", "declined"]
    },
    {
      "id": "intake_complete",
      "name": "Intake Complete",
      "lane": "engagement",
      "order": 2,
      "sla_hours": 24,
      "allowed_transitions": ["conflicts_pending"]
    },
    {
      "id": "conflicts_pending",
      "name": "Conflicts Check Pending",
      "lane": "engagement",
      "order": 3,
      "sla_hours": 24,
      "allowed_transitions": ["conflicts_clear", "conflicts_found"]
    },
    {
      "id": "conflicts_clear",
      "name": "Conflicts Clear",
      "lane": "engagement",
      "order": 4,
      "sla_hours": 48,
      "allowed_transitions": ["engagement_sent"]
    },
    {
      "id": "engagement_sent",
      "name": "Engagement Sent",
      "lane": "engagement",
      "order": 5,
      "sla_hours": 120,
      "allowed_transitions": ["engagement_signed"]
    },
    {
      "id": "engagement_signed",
      "name": "Engagement Signed",
      "lane": "planning",
      "order": 6,
      "sla_hours": 72,
      "allowed_transitions": ["planning_meeting_scheduled"]
    },
    {
      "id": "planning_meeting_scheduled",
      "name": "Planning Meeting Scheduled",
      "lane": "planning",
      "order": 7,
      "sla_hours": 168,
      "allowed_transitions": ["planning_complete"]
    },
    {
      "id": "planning_complete",
      "name": "Planning Complete",
      "lane": "drafting",
      "order": 8,
      "sla_hours": 48,
      "allowed_transitions": ["in_drafting"]
    },
    {
      "id": "in_drafting",
      "name": "In Drafting",
      "lane": "drafting",
      "order": 9,
      "sla_hours": 120,
      "allowed_transitions": ["draft_complete", "returned_for_corrections"]
    },
    {
      "id": "draft_complete",
      "name": "Draft Complete",
      "lane": "review",
      "order": 10,
      "sla_hours": 48,
      "allowed_transitions": ["attorney_review"]
    },
    {
      "id": "attorney_review",
      "name": "Attorney Review",
      "lane": "review",
      "order": 11,
      "sla_hours": 72,
      "allowed_transitions": ["attorney_approved", "returned_for_corrections"]
    },
    {
      "id": "attorney_approved",
      "name": "Attorney Approved",
      "lane": "review",
      "order": 12,
      "sla_hours": 48,
      "allowed_transitions": ["sent_to_client"]
    },
    {
      "id": "sent_to_client",
      "name": "Sent to Client for Review",
      "lane": "review",
      "order": 13,
      "sla_hours": 168,
      "allowed_transitions": ["client_approved", "client_revisions_requested"]
