  "required_artifacts": [
    {
      "artifact_type": "INTAKE_QUESTIONNAIRE",
      "required_at_status": ["new", "intake_complete"],
      "description": "Estate planning questionnaire"
    },
    {
      "artifact_type": "ENGAGEMENT_SIGNED",
      "required_at_status": ["engagement_signed"],
      "description": "Signed engagement letter"
    },
    {
      "artifact_type": "PAYMENT_CONFIRMATION",
      "required_at_status": ["engagement_signed"],
      "description": "Retainer or fee payment"
    },
    {
      "artifact_type": "FINANCIAL_DOCS",
      "required_at_status": ["planning_complete"],
      "description": "Asset inventory and valuations"
    },
    {
      "artifact_type": "DRAFT_FILING",
      "required_at_status": ["draft_complete", "attorney_review"],
      "description": "Draft estate planning documents"
    },
    {
      "artifact_type": "FINAL_ORDERS",
      "required_at_status": ["signing_complete", "delivered_to_client"],
      "description": "Executed estate planning documents"
    }
  ],

  "qc_gates": [
    {
      "gate_id": "planning_qc",
      "name": "Planning Review",
      "at_status": "planning_complete",
      "checks": [
        "Client goals clearly documented",
        "Beneficiaries and alternates identified",
        "Asset distribution plan outlined",
        "Tax implications considered",
        "Trust needs assessed (if applicable)"
      ]
    },
    {
      "gate_id": "draft_qc",
      "name": "Draft Document QC",
      "at_status": "attorney_review",
      "checks": [
        "All names and dates correct",
        "Beneficiary designations match plan",
        "Powers of attorney scope appropriate",
        "Healthcare directive preferences clear",
        "Trust provisions (if applicable) complete",
        "Execution requirements met (witnesses, notary)",
        "Attorney certification present"
      ]
    },
    {
      "gate_id": "execution_qc",
      "name": "Execution QC",
      "at_status": "signing_complete",
      "checks": [
        "All required signatures present",
        "Witness signatures (if required)",
        "Notarization complete",
        "Self-proving affidavit (if applicable)",
        "All pages initialed"
      ]
    }
  ],

  "automation_rules": [
    {
      "rule_id": "auto_create_starter_tasks",
      "trigger": "matter_created",
      "actions": [
        {
          "type": "create_task",
          "config": {
            "title": "Run conflicts check",
            "priority": "high",
            "due_offset_hours": 24
          }
        },
        {
          "type": "create_task",
          "config": {
            "title": "Schedule planning meeting",
            "priority": "medium",
            "due_offset_hours": 72
          }
        }
      ]
    },
    {
      "rule_id": "auto_planning_reminder",
      "trigger": "status_changed_to",
      "trigger_status": "planning_meeting_scheduled",
      "actions": [
        {
          "type": "create_task",
          "config": {
            "title": "Send pre-meeting questionnaire",
            "priority": "high",
            "due_offset_hours": 24
          }
        },
        {
          "type": "schedule_reminders",
          "config": {
            "reminder_days": [2, 1],
            "reminder_type": "meeting_reminder"
          }
        }
      ]
    },
    {
      "rule_id": "auto_client_review_reminder",
      "trigger": "status_changed_to",
      "trigger_status": "sent_to_client",
      "actions": [
        {
          "type": "schedule_reminders",
          "config": {
            "reminder_days": [3, 7, 10],
            "reminder_type": "client_review_followup"
          }
        }
      ]
    },
    {
      "rule_id": "auto_escalate_sla_breach",
      "trigger": "sla_breach",
      "conditions": {
        "missing_artifacts": true
      },
      "actions": [
        {
          "type": "escalate",
          "config": {
            "escalate_to_role": "ops_lead",
            "reason": "SLA breach in estate planning matter"
          }
        },
        {
          "type": "add_health_driver",
          "config": {
            "driver": "Planning docs aging"
          }
        }
      ]
    },
    {
      "rule_id": "auto_corrections_workflow",
      "trigger": "status_changed_to",
      "trigger_status": "returned_for_corrections",
      "actions": [
        {
          "type": "require_defect_reason",
          "config": {
            "require_note": true
          }
        },
        {
          "type": "increment_defect_count"
        },
        {
          "type": "create_task",
          "config": {
            "title": "Correct issues in estate plan",
            "priority": "urgent",
            "due_offset_hours": 24,
            "assign_to_previous_lane_owner": true
          }
        }
      ]
    },
    {
      "rule_id": "auto_ai_approval_gate",
      "trigger": "ai_run_created",
      "conditions": {
        "risk_level": ["medium", "high"]
      },
      "actions": [
        {
          "type": "require_approval",
          "config": {
            "approval_role": "estate_attorney"
          }
        },
        {
          "type": "block_external_send",
          "config": {
            "until_approved": true
          }
        }
      ]
    }
  ],

  "allowed_ai_actions": [
    {
      "action_type": "document_generation",
      "description": "Generate will, trust, or POA documents",
      "default_risk_level": "high",
      "requires_approval": true
    },
    {
      "action_type": "estate_tax_analysis",
      "description": "Analyze estate tax implications",
      "default_risk_level": "medium",
      "requires_approval": true
    },
    {
      "action_type": "asset_inventory_review",
      "description": "Review and categorize assets",
      "default_risk_level": "low",
      "requires_approval": false
    },
    {
      "action_type": "document_qa",
      "description": "Quality check estate planning documents",
      "default_risk_level": "low",
      "requires_approval": false
    },
    {
      "action_type": "client_letter_draft",
      "description": "Draft client communication",
      "default_risk_level": "medium",
      "requires_approval": true
    }
  ],

  "metadata": {
    "created_by": "system",
    "created_at": "2026-01-15T00:00:00Z",
    "last_updated": "2026-01-15T00:00:00Z",
    "schema_version": "1.0"
  }
