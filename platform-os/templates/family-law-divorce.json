  "practice_area": "FL",
  "matter_type": "FL-DIVORCE",
  "name": "Family Law: Divorce",
  "description": "Divorce workflow including intake, discovery, negotiation, and final decree.",

  "lanes": [
    {
      "id": "intake",
      "name": "Intake",
      "order": 1,
      "roles": ["intake_specialist", "paralegal"],
      "description": "Initial client consultation and information gathering"
    },
    {
      "id": "engagement",
      "name": "Engagement",
      "order": 2,
      "roles": ["paralegal", "attorney"],
      "description": "Conflicts, engagement, and retainer"
    },
    {
      "id": "pleadings",
      "name": "Pleadings",
      "order": 3,
      "roles": ["paralegal", "attorney"],
      "description": "Prepare and file initial divorce petition"
    },
    {
      "id": "discovery",
      "name": "Discovery",
      "order": 4,
      "roles": ["paralegal", "attorney"],
      "description": "Discovery requests and responses"
    },
    {
      "id": "negotiation",
      "name": "Negotiation",
      "order": 5,
      "roles": ["attorney", "mediator"],
      "description": "Settlement negotiations and mediation"
    },
    {
      "id": "trial_prep",
      "name": "Trial Prep",
      "order": 6,
      "roles": ["attorney", "paralegal"],
      "description": "Trial preparation if settlement fails"
    },
    {
      "id": "finalization",
      "name": "Finalization",
      "order": 7,
      "roles": ["paralegal", "attorney"],
      "description": "Final decree preparation and filing"
    },
    {
      "id": "closed",
      "name": "Closed",
      "order": 8,
      "roles": ["admin"],
      "description": "Divorce finalized or case dismissed"
    }
  ],

